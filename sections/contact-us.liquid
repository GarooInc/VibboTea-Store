<div 
    class="grid grid-cols-2 h-screen bg-[#F8F8F8]"
    style="width: 100vw; margin-left: calc(50% - 50vw);"
>
    <div class="flex pt-[20vw] pl-[15vw]">
        <div class="text-black text-[8vw] md:text-[3.5vw] font-bricolage font-semibold leading-[1.1]">
            {{ section.settings.title | newline_to_br }}
        </div>
        <div class="absolute bottom-0 right-1/2">
            {% if section.settings.image1 %}
                <img 
                    src="{{ section.settings.image1 | image_url: width: 600 }}"
                    alt="Image 1"
                    class="mt-10 ml-[-5vw] md:ml-0 w-52 md:w-96 object-cover rounded-2xl "
                >
            {% endif %}
        </div>
        <div class="absolute bottom-0 left-0 w-52 md:w-96 overflow-hidden">
            {% if section.settings.image2 %}
                <img 
                    src="{{ section.settings.image2 | image_url: width: 600 }}"
                    alt="Image 2"
                    class="mt-10 w-[200%] md:w-[200%] object-cover rounded-2xl -translate-x-1/4"
                >
            {% endif %}
        </div>

    </div>

    <div class="w-7/9  ">
        <form method="post" action="/contact#ContactForm" id="ContactForm" class="max-w-2xl mx-auto p-4">
        {{ form.errors | default_errors }}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-[11vw] pb-4 ">
            <!-- First name -->
            <div>
                <label for="ContactFormFirstName" class="block mb-1 font-medium font-bricolage pb-2">
                    First name
                </label>

                <input
                    type="text"
                    name="contact[first_name]"
                    id="ContactFormFirstName"
                    placeholder="Tell us who you are"
                    class="w-full border border-gray-300 bg-white px-4 py-3
                        focus:outline-none focus:ring-2 focus:ring-black 
                        rounded-2xl"
                >
                </div>


            <!-- Last name -->
            <div>
            <label for="ContactFormLastName" class="block mb-1 font-medium  font-bricolage pb-2">Last name</label>
            <input
                type="text"
                name="contact[last_name]"
                id="ContactFormLastName"
                placeholder="Tell us who you are"
                class="w-full border border-gray-300 bg-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black"
            >
            </div>
        </div>

        <!-- Email -->
        <div class="mt-5 pb-4">
            <label for="ContactFormEmail" class="block mb-1 font-medium font-bricolage pb-2">Email address</label>
            <input
            type="email"
            name="contact[email]"
            id="ContactFormEmail"
            placeholder="How else would we reach you?"
            class="w-full border border-gray-300  bg-white rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black"
            required
            >
        </div>

        <!-- Message -->
        <div class="mt-5 pb-4">
            <label for="ContactFormMessage" class="block mb-1 font-medium  font-bricolage pb-2">How can we help?</label>
            <textarea
            name="contact[body]"
            id="ContactFormMessage"
            rows="5"
            placeholder="Tell us everything, I mean not everything but you get it."
            class="w-full border border-gray-300 rounded-lg bg-white px-4 py-3 focus:outline-none focus:ring-2 focus:ring-black"
            ></textarea>
        </div>

        <!-- Button -->
        <div class="mt-8">
            <button
            type="submit"
            class="w-full bg-black text-white py-3 rounded-full text-center hover:opacity-80 transition"
            >
            Send to Us
            </button>
        </div>
        </form>
        <div class="text-center pt-4">
            <p class="text-xs">By Contacting us, you agree to our Terms of service and privacy Policy</p>
        </div>
    </div>

</div>



{% schema %}
{
  "name": "Contact us",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
     "type": "image_picker", 
     "id": "image1", 
      "label": "Image1"
    },
    {
     "type": "image_picker", 
     "id": "image2", 
      "label": "Image2"
    }
    
    
    
  ],
  "presets": [
    {
      "name": "Contact us",
    }
  ]
}
{% endschema %}