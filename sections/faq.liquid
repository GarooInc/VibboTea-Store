    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "Pregunta",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Pregunta"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Respuesta"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}
