<div
  class="flex flex-col items-center justify-center pt-55 py-10 px-15 kickstarter-text">

    <h1 class="font-bricolage text-black text-4xl pl-70 py-2 pb-15">
        {{ section.settings.text1 }}</h1>

    {% if section.settings.text2 != blank %}
        <h1
        class="kickstarter-text font-bricolage text-4xl py-5 text-left"
        style="--marker-color: {{ section.settings.text_color2 }};"
        >
        {{ section.settings.text2 | replace: 'Vibbo',
             '<span class="font-grafika font-normal text-4xl ">VIBBO</span>' }}
        </h1>
    {% endif %}
    {% if section.settings.text3 != blank %}
        <h1
        class="kickstarter-text font-bricolage text-4xl py-5 text-left"
        style="--marker-color: {{ section.settings.text_color3 }};"
