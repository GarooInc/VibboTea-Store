<div class="flex w-full">
    <div class="grid w-full grid-cols-2"></div>
    <div class="flex w-full flex-row"></div>
    <div class="w-full flex flex-row"></div>

</div>

{% schema %}

{
  "name": "Product Steps",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Product Steps"
    }
  ],
  "blocks": [
    {
      "type": "category_block",
      "name": "Category Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Category"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "flecha",
          "label": "Arrow Text",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Main Categories",
      "category": "Productos"
    }
  ]
}
{% endschema %}