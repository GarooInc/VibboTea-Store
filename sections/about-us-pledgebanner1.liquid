      "default": "Our Zero B.S. Pledge"
    },
    {
      "type": "richtext",
      "id": "text1",
      "label": "Texto 1"
    },
    {
      "type": "richtext",
      "id": "text2",
      "label": "Texto 2"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    }
  ],
  "presets": [
    {
      "name": "Pledge Banner About Us 1"
    }
  ]
}
{% endschema %}
