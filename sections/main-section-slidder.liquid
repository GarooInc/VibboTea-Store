<section
  class="relative w-full md:mt-20 mt-1"
  x-data="carousel({
    autoplay: {{ section.settings.autoplay }},
    interval: {{ section.settings.interval | default: 5000 }},
    count: {{ section.blocks.size }}
  })"
  x-init="init()"
  aria-roledescription="carousel"
  style="width: 100vw; margin-left: calc(50% - 50vw);"
>
  <!-- Desktop: 3 imágenes visibles -->
  <div class="block relative overflow-hidden w-full">
  <div class="flex transition-transform duration-500 ease-out"
       :style="`transform: translateX(-${index * 100}%)`">
      {% for block in section.blocks %}
        {% assign img = block.settings.image %}
        <div class="w-full flex-shrink-0 " {{ block.shopify_attributes }}>
          {% if img %}
            <img
              src="{{ img | image_url: width: 800 }}"
              alt="{{ block.settings.alt | escape }}"
              width="{{ img.width }}"
              height="{{ img.height }}"
              class="w-full h-[600px] object-cover select-none"
              loading="{% if forloop.index <= 3 %}eager{% else %}lazy{% endif %}"
            >
          {% else %}
            <div class="w-full h-[400px] bg-gray-100 grid place-items-center">
              <span class="text-gray-500">Sube una imagen</span>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Flechas Desktop -->
    <div class="flex items-center justify-between absolute inset-0 pointer-events-none px-10 ">
      <button
        @click="prev()"
        class="pointer-events-auto h-12 w-12 "
        aria-label="Slides anteriores"
      >
        <svg xmlns="http://www.w3.org/2000/svg"  fill="none" viewBox="0 0 24 24"
           stroke-width="1.5" stroke="currentColor" class="md:size-20 size-12"
          >
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
        </svg>
      </button>
      <button
        @click="next()"
        class="pointer-events-auto h-12 w-12 "
        aria-label="Siguientes slides"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="md:size-20 size-12">
            <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
        </svg>

      </button>
    </div>
  </div>


</section>

<script>
  function carousel({ autoplay = false, interval = 5000, count = 0 }) {
    return {
      index: 0,
      timer: null,

      // Helpers reactivos
      get isMobile() {
        return window.innerWidth < 768;
      },
      get maxIndex() {
        return Math.max(0, count - 1); // SIEMPRE 1 imagen por vista
        }
      clamp() {
        if (count <= 0) {
          this.index = 0;
          return;
        }
        if (this.index < 0) this.index = 0;
        if (this.index > this.maxIndex) this.index = this.maxIndex;
      },

      init() {
        // Asegura índice válido al cargar
        this.clamp();

        if (autoplay && count > 1) {
          this.start();
          // Pausar en hover (sólo desktop tiene hover real)
          this.$el.addEventListener('mouseenter', () => { if (!this.isMobile) this.stop(); });
          this.$el.addEventListener('mouseleave', () => { if (!this.isMobile) this.start(); });
        }

        // Re-clamp al cambiar tamaño (pasa de mobile a desktop y viceversa)
        const onResize = () => this.clamp();
        window.addEventListener('resize', onResize);

        // Swipe para mobile
        let startX = null;
        this.$el.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
        }, { passive: true });
        this.$el.addEventListener('touchend', (e) => {
          if (startX === null) return;
          const dx = e.changedTouches[0].clientX - startX;
          if (Math.abs(dx) > 50) {
            dx < 0 ? this.next() : this.prev();
          }
          startX = null;
        }, { passive: true });

        // Teclado (izq/der)
        this.$el.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowRight') this.next();
          if (e.key === 'ArrowLeft') this.prev();
        });

        // Pausar autoplay al cambiar de pestaña
        const onVisibility = () => {
          if (!autoplay) return;
          if (document.hidden) this.stop();
          else this.start();
        };
        document.addEventListener('visibilitychange', onVisibility);

        // Limpieza opcional cuando el elemento salga del DOM (por si usas Alpine v3 con destroy)
        this.$watch?.('index', () => this.clamp());
      },

      // Visibilidad de flechas
      canGoPrev() {
        return this.index > 0;
      },
      canGoNext() {
        return this.index < this.maxIndex;
      },

      // Navegación SIN loop
      go(i) {
        this.index = Math.max(0, Math.min(i, this.maxIndex));
      },
      next() {
        if (this.canGoNext()) this.index++;
      },
      prev() {
        if (this.canGoPrev()) this.index--;
      },

      // Autoplay
      start() {
        this.stop();
        if (count <= 1) return;
        this.timer = setInterval(() => {
          if (this.canGoNext()) {
            this.index++;
          } else {
            this.go(0);
          }
        }, interval);
      },
      stop() {
        if (this.timer) {
          clearInterval(this.timer);
          this.timer = null;
        }
      }
    }
  }
</script>

{% schema %}
{
  "name": "Slider Imágenes",
  "settings": [
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "interval",
      "label": "Intervalo (ms)",
      "min": 2000,
      "max": 9500,
      "step": 500,
      "default": 5000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Imagen",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "text", "id": "alt", "label": "Texto alternativo", "default": "Imagen del slider" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [{ "name": "Slider Imágenes" }]
}
{% endschema %}