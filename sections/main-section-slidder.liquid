<section
  class="relative w-full md:mt-20 mt-1 md:py-25 pb-10"
  x-data="carousel({
    autoplay: {{ section.settings.autoplay }},
    interval: {{ section.settings.interval | default: 5000 }},
    count: {{ section.blocks.size }}
  })"
  x-init="init()"
  aria-roledescription="carousel"
>
  <!-- TÍTULO + flechas -->
  <div class="w-full md:flex items-center justify-between md:px-5 py-5 md:py-0 pt-15 px-5">
    <div class="hidden md:block text-black text-[6vw] md:text-[3.4vw] font-bricolage font-semibold leading-[1.1]">
      {{ section.settings.title | newline_to_br }}
    </div>

    <div class="hidden md:flex md:pl-[24vw] pt-10">
      <button @click="prev()" aria-label="Anterior" class="p-2 hover:opacity-70 transition-opacity">
        {% render 'arrow-grandma' %}
      </button>
      <button @click="next()" aria-label="Siguiente" class="p-2 hover:opacity-70 transition-opacity">
        {% render 'arrow-grandma2' %}
      </button>
    </div>

    <!--- verion mobile --->
    <div>
      <h2 class="md:hidden text-black text-[7vw] font-bricolage font-semibold leading-[1.1] ">
        {{ section.settings.title_mobile | newline_to_br }}
        
      </h2>
      <p class="md:hidden pt-5 text-gray-700 text-[4vw] font-sf-pro font-light leading-[1.2] ">
        {{ section.settings.description_mobile | newline_to_br }}

        </p>
    </div>

    <div class="md:hidden  items-center pt-4">
      <button @click="prev()" aria-label="Anterior" class="scale-75">
        {% render 'arrow-grandma' %}
      </button>
      <button @click="next()" aria-label="Siguiente" class="scale-75">
        {% render 'arrow-grandma2' %}
      </button>
    </div>
  </div>

  <!-- Desktop: 3 imágenes visibles -->
  <div class="hidden md:block relative overflow-hidden py-5 ">
    <div class="flex transition-transform duration-500 ease-out" :style="`transform: translateX(-${index * 33.333}%)`">
      {% for block in section.blocks %}
        {% assign img = block.settings.image %}
        <div class="w-1/3 shrink-0 px-2" {{ block.shopify_attributes }}>
          {% if img %}
            <img
              src="{{ img |img_url: '2000x2000' }}"
              alt="{{ block.settings.alt | escape }}"
              width="{{ img.width }}"
              height="{{ img.height }}"
              class="w-full h-[600px] object-cover select-none"
              loading="{% if forloop.index <= 3 %}eager{% else %}lazy{% endif %}"
            >
          {% else %}
            <div class="w-full h-[400px] bg-gray-100 grid place-items-center">
              <span class="text-gray-500">Sube una imagen</span>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

   
  </div>

  <!-- Mobile: 1 imagen visible -->
  <div class="md:hidden relative px-5 overflow-hidden ">
    <div class="relative overflow-hidden h-[400px]">
      {% for block in section.blocks %}
        {% assign img = block.settings.image %}
        <figure
          x-show="index === {{ forloop.index0 }}"
          x-transition:enter="transition ease-out duration-500"
          x-transition:enter-start="opacity-0"
          x-transition:enter-end="opacity-100"
          x-transition:leave="transition ease-in duration-500"
          x-transition:leave-start="opacity-100"
          x-transition:leave-end="opacity-0"
        >
          {% if img %}
            <img
              src="{{ img | img_url: '2000x2000' }}"
              alt="{{ block.settings.alt | escape }}"
              width="{{ img.width }}"
              height="{{ img.height }}"
              class="w-full md:h-[300px] h-[600px] object-cover select-none rounded-lg"
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
            >
             
          {% else %}
            <div class="w-full h-[300px] bg-gray-100 grid place-items-center rounded-lg">
              <span class="text-gray-500">Sube una imagen</span>
            </div>
          {% endif %}
        </figure>
      {% endfor %}
    </div>

    
  </div>
</section>

<script>
  function carousel({ autoplay = false, interval = 5000, count = 0 }) {
    return {
      index: 0,
      timer: null,

      // Helpers reactivos
      get isMobile() {
        return window.innerWidth < 768;
      },
      get maxIndex() {
        // Desktop muestra 3; Mobile muestra 1
        return this.isMobile ? Math.max(0, count - 1) : Math.max(0, count - 3);
      },
      clamp() {
        if (count <= 0) {
          this.index = 0;
          return;
        }
        if (this.index < 0) this.index = 0;
        if (this.index > this.maxIndex) this.index = this.maxIndex;
      },

      init() {
        // Asegura índice válido al cargar
        this.clamp();

        if (autoplay && count > 1) {
          this.start();
          // Pausar en hover (sólo desktop tiene hover real)
          this.$el.addEventListener('mouseenter', () => { if (!this.isMobile) this.stop(); });
          this.$el.addEventListener('mouseleave', () => { if (!this.isMobile) this.start(); });
        }

        // Re-clamp al cambiar tamaño (pasa de mobile a desktop y viceversa)
        const onResize = () => this.clamp();
        window.addEventListener('resize', onResize);

        // Swipe para mobile
        let startX = null;
        this.$el.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
        }, { passive: true });
        this.$el.addEventListener('touchend', (e) => {
          if (startX === null) return;
          const dx = e.changedTouches[0].clientX - startX;
          if (Math.abs(dx) > 50) {
            dx < 0 ? this.next() : this.prev();
          }
          startX = null;
        }, { passive: true });

        // Teclado (izq/der)
        this.$el.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowRight') this.next();
          if (e.key === 'ArrowLeft') this.prev();
        });

        // Pausar autoplay al cambiar de pestaña
        const onVisibility = () => {
          if (!autoplay) return;
          if (document.hidden) this.stop();
          else this.start();
        };
        document.addEventListener('visibilitychange', onVisibility);

        // Limpieza opcional cuando el elemento salga del DOM (por si usas Alpine v3 con destroy)
        this.$watch?.('index', () => this.clamp());
      },

      // Visibilidad de flechas
      canGoPrev() {
        return this.index > 0;
      },
      canGoNext() {
        return this.index < this.maxIndex;
      },

      // Navegación SIN loop
      go(i) {
        this.index = Math.max(0, Math.min(i, this.maxIndex));
      },
      next() {
        if (this.canGoNext()) this.index++;
      },
      prev() {
        if (this.canGoPrev()) this.index--;
      },

      // Autoplay
      start() {
        this.stop();
        if (count <= 1) return;
        this.timer = setInterval(() => {
          if (this.canGoNext()) {
            this.index++;
          } else {
            this.go(0);
          }
        }, interval);
      },
      stop() {
        if (this.timer) {
          clearInterval(this.timer);
          this.timer = null;
        }
      }
    }
  }
</script>

{% schema %}
{
  "name": "Slider Imágenes",
  "settings": [
     {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "title_mobile",
      "label": "Title Mobile",
      "default": "Title Mobile" 
    },
     {
      "type": "textarea",
      "id": "description_mobile",
      "label": "Description Mobile",
      "default": "Description Mobile" 
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "interval",
      "label": "Intervalo (ms)",
      "min": 2000,
      "max": 9500,
      "step": 500,
      "default": 5000
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Imagen",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Imagen" },
        { "type": "text", "id": "alt", "label": "Texto alternativo", "default": "Imagen del slider" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [{ "name": "Slider Imágenes" }]
}
{% endschema %}