<div 
class="w-screen min-h-[90vh] bg-[#EBEBEB] flex flex-col justify-between"
style="width: 100vw; margin-left: calc(50% - 50vw);"
>
  {% assign mp4_url = section.settings.primary_video_url %}
    

      

    <div class="w-full flex justify-start items-start px-20 py-10 pt-20">
        <div class="text-black text-[6vw] md:text-[3.3vw] font-bricolage font-semibold">
            {{ section.settings.title }}
        </div>
    </div>

    <div class="w-full flex justify-center items-center ">
        <div class="grid grid-cols-2 w-full gap-20 p-20 pt-5 pb-30">
            <div class="relative w-full aspect-square overflow-hidden">

              <video 
                src="{{ mp4_url }}" 
                autoplay 
                loop 
                muted 
                playsinline
                class="absolute inset-0 w-full object-cover">
              </video>



              <!-- TEXTO ENCIMA DE LA IMAGEN -->
              <div class="absolute inset-0 ">
                  <h2 class="text-white text-6xl pl-10 pt-25 font-bricolage font-semibold">
                      {{ section.settings.text-imagen1 | newline_to_br}}
                  </h2>
              </div>
              <div class="absolute bottom-20 left-10 bg-white h-12 w-42 flex justify-left items-center rounded-full">
                <p class="text-black text-base p-4 font-bricolage">
                    Get pumped
                </p>
                <a href="{{ section.settings.imagen1-url }}" target="_blank" rel="noopener" 
                  class="hover:opacity-70 transition-opacity scale-80" 
                  aria-label="Imagen 1 URL">
                  {%- render 'arrow' -%}
                </a>
            </div>

          </div>

            
            <div class="relative w-full">
                <video 
                  src="{{ mp4_url }}" 
                  autoplay 
                  loop 
                  muted 
                  playsinline
                  class="absolute inset-0 w-full object-cover">
                </video>
                  <!-- TEXTO ENCIMA DE LA IMAGEN -->
              <div class="absolute inset-0 ">
                  <h2 class="text-white text-6xl pl-10 pt-25 font-bricolage font-semibold">
                      {{ section.settings.text-imagen2 | newline_to_br}}
                  </h2>
              </div>
              <div class="absolute bottom-20 left-10 bg-white h-12 w-42 flex justify-left items-center rounded-full">
                <p class="text-black text-base p-4 font-bricolage">
                    Get purified
                </p>
                  <a href="{{ section.settings.imagen1-url }}" target="_blank" rel="noopener" 
                    class="hover:opacity-70 transition-opacity scale-80" 
                    aria-label="Imagen 1 URL">
                    {%- render 'arrow' -%}
                  </a>
              </div>
            </div>
        </div>
    </div>

</div>




{% schema %}
{
  "name": "Section Universe",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    
     {
      "type": "url",
      "id": "primary_video_url",
      "label": "Video URL (MP4 o YouTube)"
    },
     {
      "type": "url",
      "id": "primary_video_url2",
      "label": "Video URL (MP4 o YouTube)"
    },
    {
      "type": "textarea",
      "id": "text-imagen1",
      "label": "Text Imagen 1",
      "default": "texto 1"
    },
    {
      "type": "textarea",
      "id": "text-imagen2",
      "label": "Text Imagen 2",
      "default": "texto 2"
    },
    {
      "type": "url",
      "id": "imagen1-url",
      "label": "Imagen1 URL"
    },
    {
      "type": "url",
      "id": "imagen2-url",
      "label": "Imagen2 URL"
    },
    
  ],
  "presets": [
    {
      "name": "Section Universe",
    }
  ]
}
{% endschema %}
